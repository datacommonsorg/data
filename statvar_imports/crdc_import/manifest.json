{
    "import_specifications": [
        {
            "import_name": "CRDC_Education_Discipline_Attendance",
            "curator_emails": [
                "support@datacommons.org"
            ],
            "provenance_url": "https://civilrightsdata.ed.gov/data",
            "provenance_description": "The Civil Rights Data Collection (CRDC) provides data on key education and civil rights issues in our nation's public schools. This import focuses on chronic absenteeism, offenses, and restraint and seclusion data.",
            "scripts": [
                "download_script.py",
                "../../tools/statvar_importer/stat_var_processor.py --input_data='input_files/chronic_absenteeism/*.*' --pv_map=pv_map/chronic_absenteeism_pvmap.csv --config_file=pv_map/chronic_absenteeism_metadata.csv --output_path=output_files/chronic_absenteeism_output --existing_statvar_mcf=gs://unresolved_mcf/scripts/statvar/stat_vars.mcf --log_level=-2 --log_every_n=1000",
                "../../tools/statvar_importer/stat_var_processor.py --input_data='input_files/offenses/*.csv' --pv_map=pv_map/offenses_pvmap.csv --config_file=pv_map/offenses_metadata.csv --output_path=output_files/offenses_output --existing_statvar_mcf=gs://unresolved_mcf/scripts/statvar/stat_vars.mcf --log_level=-2 --log_every_n=1000",
                "../../tools/statvar_importer/stat_var_processor.py --input_data='input_files/restraint_and_seclusion/*.*' --pv_map=pv_map/restraint_and_seclusion_pvmap.csv --config_file=pv_map/restraint_and_seclusion_metadata.csv --output_path=output_files/restraint_and_seclusion_output  --existing_statvar_mcf=gs://unresolved_mcf/scripts/statvar/stat_vars.mcf --log_level=-2 --log_every_n=1000"
            ],
            "import_inputs": [
                {
                    "template_mcf": "output_files/chronic_absenteeism_output.tmcf",
                    "cleaned_csv": "output_files/chronic_absenteeism_output.csv"
                },
                {
                    "template_mcf": "output_files/offenses_output.tmcf",
                    "cleaned_csv": "output_files/offenses_output.csv"
                },
                {
                    "template_mcf": "output_files/restraint_and_seclusion_output.tmcf",
                    "cleaned_csv": "output_files/restraint_and_seclusion_output.csv"
                }
            ],
            "source_files": [
                "input_files/chronic_absenteeism/*.*",
                "input_files/offenses/*.csv",
                "input_files/restraint_and_seclusion/*.*"
            ],
            "cron_schedule": "0 8 1,15 * *",
            "resource_limits": {
                "cpu": 32,
                "memory": 256,
                "disk": 200
            }
        }
    ]
}
